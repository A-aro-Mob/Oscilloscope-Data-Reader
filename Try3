import pyvisa

# Initialize VISA resource manager
rm = pyvisa.ResourceManager()

# Connect to the oscilloscope (replace 'USB0::...' with your device's address)
oscilloscope = rm.open_resource('USB0::0xF4EC::0xEE38::SDS000000000::INSTR')

# Example: Identify the device
print(oscilloscope.query('*IDN?'))

# Example: Retrieve waveform data
oscilloscope.write(':WAV:MODE RAW')
oscilloscope.write(':WAV:DATA?')
data = oscilloscope.read_raw()

# Close the connection
oscilloscope.close()
